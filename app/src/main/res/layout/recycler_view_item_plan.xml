<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/main_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="41dp"
        app:shape_roundRect_topRightRadius="5dp"
        app:shape_roundRect_topLeftRadius="5dp"
        app:shape_roundRect_bottomLeftRadius="5dp"
        app:shape_roundRect_bottomRightRadius="5dp"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GateKeeper+"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:id="@+id/plan_plus_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Subscription"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:id="@+id/plan_title"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:id="@+id/price_container"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.99"
                    android:textStyle="bold"
                    android:id="@+id/price_number"
                    android:textColor="@color/white"
                    android:textSize="50sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Â£"
                    android:id="@+id/price_currency"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/perks"
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Keep your data secure\n\nSync your data across multiple devices\n\nHave up to 20 passwords stored\n\nHave up to 1 credit card stored\n\n Have up to 5 notes stored"
                android:textColor="#81CDE9"
                android:textSize="18sp" />
        </LinearLayout>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:shape_roundRect_bottomLeftRadius="25dp"
        app:shape_roundRect_topLeftRadius="25dp"
        app:shape_roundRect_topRightRadius="25dp"
        app:shape_roundRect_bottomRightRadius="25dp"
        android:layout_marginBottom="16dp"
        android:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buy_now"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:textStyle="bold"/>

        </RelativeLayout>
    </com.github.florent37.shapeofview.shapes.RoundRectView>
</RelativeLayout>