<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="16dp">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/login_action"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/copy"/>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        app:shape_roundRect_topRightRadius="40dp"
        app:shape_roundRect_bottomRightRadius="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:id="@+id/login_img_container">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="GK"
                    android:id="@+id/login_icon_initial"
                    android:textColor="@color/mate_black"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/login_image"
                    android:layout_centerInParent="true"
                    android:src="@drawable/question_mark"
                    android:layout_margin="8dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/login_img_container"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_name"
                    android:textColor="@color/mate_black"
                    android:text="Name"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_username"
                    android:text="Username"
                    android:textColor="#5C5C5C"
                    android:textSize="17sp"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>




        </RelativeLayout>

