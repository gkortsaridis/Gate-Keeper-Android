<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_grey"
    tools:context=".UI.Devices.DevicesFragment">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:id="@+id/height"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginBottom="4dp"
        app:shape_roundRect_bottomLeftRadius="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="These are the devices that have been logged to your account"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="40dp"
        android:paddingTop="40dp"
        android:paddingBottom="90dp"
        android:id="@+id/devicesRV"/>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:id="@+id/adview_container"
        android:layout_marginBottom="-90dp"
        android:alpha="0.0"
        app:shape_roundRect_topLeftRadius="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"/>
        </RelativeLayout>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

</RelativeLayout>