<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_grey"
    tools:context=".UI.PasswordGenerator.PasswordGeneratorFragment">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginBottom="5dp"
        app:shape_roundRect_bottomLeftRadius="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/switch_letters"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"
                    android:text="Letters"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/switch_capitals"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"
                    android:text="Capitals"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/switch_numbers"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"
                    android:text="Numbers"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/switch_symbols"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/white"
                    android:text="Symbols"/>
            </LinearLayout>

        </LinearLayout>

    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="50dp"
            android:elevation="5dp"
            app:shape_roundRect_bottomLeftRadius="15dp"
            app:shape_roundRect_bottomRightRadius="15dp"
            app:shape_roundRect_topRightRadius="15dp"
            app:shape_roundRect_topLeftRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <info.hoang8f.android.segmented.SegmentedGroup
                    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/length_segmented"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    segmentedgroup:sc_border_width="2dp"
                    segmentedgroup:sc_corner_radius="10dp">

                    <RadioButton
                        android:id="@+id/len_8"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="8"
                        style="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/len_16"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="16"
                        style="@style/RadioButton" />


                    <RadioButton
                        android:id="@+id/len_24"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="24"
                        style="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/len_32"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="32"
                        style="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/len_48"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="48"
                        style="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/len_56"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="56"
                        style="@style/RadioButton" />
                </info.hoang8f.android.segmented.SegmentedGroup>

                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/done_green">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="fsdsd********"
                            android:id="@+id/result_tv"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/lucon"
                            android:letterSpacing="0.5"
                            android:layout_margin="8dp"
                            android:textSize="21sp"
                            android:textColor="@android:color/white"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </com.github.florent37.shapeofview.shapes.RoundRectView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageButton
                            android:layout_centerInParent="true"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/refresh"
                            android:id="@+id/refresh_btn"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:backgroundTintMode="src_atop"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageButton
                            android:layout_centerInParent="true"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/hide_btn"
                            android:background="@drawable/hide"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:backgroundTintMode="src_atop"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:shape_roundRect_topLeftRadius="40dp"
                    app:shape_roundRect_topRightRadius="40dp"
                    app:shape_roundRect_bottomRightRadius="40dp"
                    app:shape_roundRect_bottomLeftRadius="40dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/copy_to_clipboard"
                            android:textSize="19sp"
                            android:textColor="@android:color/white"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </com.github.florent37.shapeofview.shapes.RoundRectView>

            </LinearLayout>
        </com.github.florent37.shapeofview.shapes.RoundRectView>

    </ScrollView>


</LinearLayout>