<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Notes.NotesFragment">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:elevation="4dp"
        android:id="@+id/height"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginBottom="4dp"
        app:shape_roundRect_bottomLeftRadius="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vault"
                    android:layout_marginLeft="32dp"
                    android:textColor="#FDCED0"
                    android:layout_alignTop="@+id/vault_view"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vault_view"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:paddingTop="16dp"
                    android:paddingLeft="32dp"
                    android:paddingBottom="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="30dp"
                        android:src="@drawable/vault_white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal"
                        android:id="@+id/vault_name"
                        android:textSize="19sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="8dp"/>
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:clipToPadding="false"
        android:paddingBottom="50dp"
        android:paddingTop="30dp"
        android:id="@+id/notes_recycler_view"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/no_items_view"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/note_grey"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_notes_title"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/tone_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textColor="@color/tone_black"
            android:text="@string/no_notes_message"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/add"
            android:id="@+id/add_note_btn"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/round_button_dark"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.0"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:src="@drawable/plus"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-56dp"
        android:id="@+id/add_note"/>

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/adview_container"
        android:layout_marginBottom="-50dp"
        android:alpha="0.0"
        android:layout_alignParentBottom="true"
        app:shape_roundRect_topLeftRadius="80dp">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"/>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

</RelativeLayout>