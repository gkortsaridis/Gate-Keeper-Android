<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlackEditText">
        <item name="colorControlNormal">@color/mate_black</item>
        <item name="colorControlActivated">@color/mate_black</item>
        <item name="colorControlHighlight">@color/mate_black</item>
    </style>

    <style name="WhiteEditText">
        <item name="colorControlNormal">@color/vault_white_1</item>
        <item name="colorControlActivated">@color/vault_white_1</item>
        <item name="colorControlHighlight">@color/vault_white_1</item>
    </style>

    <style name="WhiteSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlActivated">#FFFFFF</item>
    </style>

</resources>
