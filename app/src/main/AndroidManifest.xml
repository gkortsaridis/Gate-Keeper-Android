<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.gkortsaridis.gatekeeper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GateKeeperApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.ApplicationSelector"></activity>
        <activity android:name=".UI.SelectFolderActivity" />
        <activity android:name=".UI.SelectVaultActivity" />
        <activity android:name=".UI.Authentication.CreatePasswordActivity" />
        <activity android:name=".UI.Authentication.SignUpActivity" />
        <activity android:name=".UI.CreateLoginActivity" />
        <activity android:name=".UI.Authentication.LoadingActivity" />
        <activity android:name=".UI.Authentication.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.MainActivity" />
    </application>

</manifest>