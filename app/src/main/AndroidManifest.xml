<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.gkortsaridis.gatekeeper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".GateKeeperApplication"
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".UI.Cards.CardEditActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".UI.Account.AccountHistoryActivity" />
        <activity
            android:name=".UI.Account.AccountStatusActivity" />
        <activity
            android:name=".UI.Authentication.PinAuthenticationActivity" />
        <activity
            android:name=".UI.Notes.NoteActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".UI.Authentication.BioAuthenticationActivity" />
        <activity
            android:name=".UI.Logins.ApplicationSelector" />
        <activity
            android:name=".UI.Vaults.SelectVaultActivity" />
        <activity
            android:name=".UI.Authentication.SignUpActivity" />
        <activity
            android:name=".UI.Logins.CreateLoginActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".UI.Authentication.LoadingActivity" />
        <activity
            android:name=".UI.Authentication.SignInActivity" />
        <activity
            android:name=".UI.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"/>
        <activity
            android:name=".UI.Authentication.AuthenticationBaseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.flipper.android.diagnostics.FlipperDiagnosticActivity"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4492385836648698~3680446633" />

        <service
            android:name=".GateKeeperAutoFillServiceL"
            android:label="GateKeeper Autofill Service"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE">
            <intent-filter>
                <action android:name="android.service.autofill.AutofillService" />
            </intent-filter>

            <meta-data
                android:name="android.autofill"
                android:resource="@xml/gatekeeper_credentials_filler" />
        </service>
    </application>

</manifest>